<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Team" table="team">
        
        <id column="id" name="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="java.lang.String" />
        <property name="games" column="games" type="java.lang.Integer" />
        <property name="wins" column="wins" type="java.lang.Integer" />
        <property name="draws" column="draws" type="java.lang.Integer" />
        <property name="losses" column="losses" type="java.lang.Integer" />
        <property name="scored" column="scored" type="java.lang.Integer" />
        <property name="missed" column="missed" type="java.lang.Integer" />
        <property name="points" column="points" type="java.lang.Integer" />
        <property name="championship_id" column="championship_id" type="java.lang.Long" />
    </class>
</hibernate-mapping>